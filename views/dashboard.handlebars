<div class="projects-main">
    <a id="projects{{id}}" class="currentUserProjects">
    <section id="makeProject" data-username="{{username}}" style="display: none;">
        <label for="projectTtitle">Title</label>
        <input type="text" id="projectTitle" name="projectTtitle">
        <label for="projectText">Details</label>
        <input type="text" id="projectText" name="projectText">
        <button id="create" type="submit">Create Project</button>
    </section>

    <div id="project">
    {{#each projects}}
    {{> user-project-details}}
    {{/each}}
    </div>
</a>

<button id="newPost">Make Project</button>
</div>






<a id="projects{{id}}" class="currentProject">
  <div id="project" class="container">
    <div class="row projectComments">
      <div class="col-sm">
        <h2>"{{title}}"</h2>
      </div>
      <div class="col-sm">
        <h2>Posted by {{user.username}} on {{format_time createdAt}}</h2>
      </div>
    </div>
  </div>
  <div class="col-sm curProjectDescr">
      <h3>Project Details</h3>
      <p>{{description}}</p>
  </div>
</a>
 
{{#if loggedIn}}
<section id="makeComment" data-username="{{username}}" style="display: none;">
    <label for="commentText">Comment</label>
    <input type="text" id="commentText" name="commentText">
    <button id="comment" type="submit">Make Comment</button>
</section>
{{/if}}

<div class="comments">
{{#each posts}}
{{> post-details}}
{{/each}}
</div>

